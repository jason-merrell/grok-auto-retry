{
  "name": "grok-retry-extension",
  "version": "0.4.0",
  "description": "Chrome extension for auto-retrying Grok moderation with React and Shadcn UI",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build --mode content",
    "watch": "vite build --mode content --watch",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:integration": "npm run build && playwright test tests/integration",
    "test:e2e": "npm run build && playwright test tests/e2e",
    "e2e:headed": "PWDEBUG=console playwright test tests/e2e"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@radix-ui/react-toast": "^1.1.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "lucide-react": "^0.462.0",
    "nanoid": "^5.0.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.5.1",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@testing-library/react": "^16.0.0",
    "@types/chrome": "^0.0.277",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^2.1.9",
    "autoprefixer": "^10.4.20",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vitest": "^2.1.9"
  }
}
